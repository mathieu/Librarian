<% content_for :title, t('.sign_in', :default => "Sign in")%>
<% content_for :navbar_link, 'sign_in'%>


<h2><%= t('.sign_in', :default => "Sign in")%></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%=f.label :email, :class => 'control-label'%>*
          <%= f.text_field :email, :class => 'form-control input-lg', :placeholder => 'Email', :autofocus=>true  %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%=f.label t('.password', :default => "Password"), :class => 'control-label'%>*
          <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => t('.password', :default => "Password") %>
        </div>
      </div>
    </div>

  <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="checkbox">
            <label><%= f.check_box :remember_me %> <%= f.label t('.remember_me') %></label>
          </div>
        </div>
  <% end -%>

    <div class="form-group">
      <%= f.submit t('.sign_in', :default => "Sign in"), :class => 'btn btn-success btn-lg' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
