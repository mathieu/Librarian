<% content_for :title, t('.sign_up', :default => "Sign up")%>
<% content_for :navbar_link, 'sign_up'%>


<h2><%= t('.sign_up', :default => "Sign up")%> </h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%=f.label :email, :class => 'control-label'%>*
          <%= f.email_field :email, :class => 'form-control input-lg', :placeholder => 'Email', :autofocus=>true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%=f.label t('.password', :default => "Password"), :class => 'control-label'%>*
          <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => t('.password', :default => "Password") %>
          <span class="help-block"><%= t('.help', :default => 'At least 8 characters, without blank space')%></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%=f.label t('.password_confirmation', :default => "Password confirmation") , :class => 'control-label'%>*
          <%= f.password_field :password_confirmation, :class => 'form-control input-lg', :placeholder => t('.password', :default => "Password")  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit t('.sign_up', :default => "Sign up"), :class => 'btn btn-success btn-lg' %>
    </div>

<% end %>

<%= render "devise/shared/links" %>
