<% content_for :title, @comic.title %>
<% content_for :navbar_link, 'comics'%>


<div class="page-header">
  <div class="pull-right">
    <% if can? :edit, @comic %>
        <%= link_to t('helpers.submit.update', model: t('Comic')), edit_comic_path(@comic), :class => 'btn btn-success' %>
    <% end %>
  </div>

  <h1><%= @comic.title %></h1>
</div>

<div class="row">
  <!-- Display cover -->
  <div class="col-md-4">
    <% if @comic.cover? %>
        <%= image_tag (@comic.cover.medium.url), :class => 'img-rounded'%>
    <% else %>
        <div class="no-picture no-picture-medium">
          <span class="glyphicon glyphicon-question-sign"></span>
        </div>
    <% end %>
  </div>

  <!-- Display info -->
  <div class="col-md-8">
    <dl class="dl-horizontal">
      <dt><%= t :Title%> : </dt>
      <dd><%= @comic.title %></dd>

      <dt><%=t :Authors %> : </dt>
      <dd>
        <%= display_authors(@comic.authors)%>
      </dd>

      <dt>ISBN : </dt>
      <dd><%= @comic.isbn%></dd>

      <dt><%= t :Editor %> : </dt>
      <dd><%= @comic.editor%></dd>

      <% if @comic.collection %>
        <dt><%= t :Collection %> : </dt>
        <dd><%= @comic.collection.title%></dd>
      <% end %>

      <dt><%= t :Registered %> : </dt>
      <dd><%= @comic.registered%></dd>

      <dt><%= t :Available %> : </dt>
      <dd><%= @comic.available%></dd>

    </dl>

  </div>
</div>


