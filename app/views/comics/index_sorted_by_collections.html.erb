<% content_for :title, t('.title') %>
<% content_for :navbar_link, 'comics'%>


<%= render partial: 'index_header' %>

<%= render partial: 'index_nav', locals: {active_link: 'collections'} %>

<% @collections.each do |collection| %>
    <% if collection.comics.count > 0 %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5><%= collection.title %></h5>
          </div>
          <div class="panel-body">
            <%= render partial: "comics/#{params[:display]?params[:display]:'grid'}", locals: {comics: collection.comics.paginate(:page => params[:page]), paginate:true} %>
          </div>
        </div>
    <% end %>
<% end %>



