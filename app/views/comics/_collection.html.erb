<% if can? :create, Comic %>
    <div class="pull-right">
      <%= link_to 'New comic', new_comic_path, :class => 'btn btn-success'%>
    </div>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Author</th>
    <th>ISBN</th>
    <th>Available</th>
    <th>Registered</th>
  </tr>
  </thead>

  <tbody>
  <% comics.each do |comic| %>
      <tr>
        <td><%= comic.id %></td>
        <td>
          <%= link_to comic.title, comic_path(comic) %>
        </td>
        <td><%= comic.author %></td>
        <td><%= comic.isbn %></td>
        <td><%= comic.available? ? 'yes' : 'no' %></td>
        <td><%= comic.registered %></td>
      </tr>
  <% end %>
  </tbody>
</table>