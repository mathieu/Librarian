<div class="page-title">
  <h1>
    <% if can? :create, Comic %>
        <div class="pull-right">
          <%= link_to t('NewComic'), new_comic_path, :class => 'btn btn-success'%>
        </div>
    <% end %>
    <%= t('Comics') %>
    <%= link_to '', comics_path(:display => 'list'), :class => 'btn glyphicon glyphicon-list' %>
    <%= link_to '', comics_path(:display => 'grid'), :class => 'btn glyphicon glyphicon-th' %>
  </h1>

</div>

<div id="tag_cloud">
  <% tag_cloud Comic.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>