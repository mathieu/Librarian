source 'https://rubygems.org'


## Ruby / Rails
############################################################################################
# Specify Ruby version (useful for heroku)
ruby '2.0.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'



## DATABASE
############################################################################################
# Use sqlite3 as the database for Active Record
gem 'sqlite3'



## UI : scss, bootstrap, uglifier, coffeescript
############################################################################################
# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# use twitter bootstrap
gem 'anjlab-bootstrap-rails', '>= 3.0.0.0', :require => 'bootstrap-rails'



## JS : uglifier, coffeescript, jquery-rails, turbolinks
############################################################################################
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library with Jquery UI
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'



## User management : devise, devise_invitable, cancan
############################################################################################
gem 'devise', '~> 3.0.1'

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby'

gem 'cancan'



## Development tools
############################################################################################
group :development do
  gem 'awesome_print'
  gem 'quiet_assets'
  gem 'sextant'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
end



## Documentation
############################################################################################
group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end